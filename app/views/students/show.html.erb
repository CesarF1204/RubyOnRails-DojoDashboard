<h1><%= @dojo.branch %></h1>
<h3>Email: <%= @student.email %></h3>
<h2>Cohort</h2>
<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
    <% @cohorts.each do |cohort| %>
        <tr>
            <td><%= cohort.first_name %></td>
            <td><%= cohort.last_name %></td>
            <td><%= cohort.email %></td>
        </tr>
    <% end %>
    </tbody>
</table>
<a href="/">Home</a> | <a href="/dojos/<%= @dojo.id %>/students/<%= @student.id %>/edit">Edit</a>