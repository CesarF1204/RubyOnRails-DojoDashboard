<h1>Editing <%= @student.first_name %> <%= @student.last_name %></h1>
<form action="/dojos/<%= params[:id] %>/students/<%= params[:stud_id] %>/update" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="patch">
    <label for="first_name">First Name: </label>
    <input type="text" name="first_name" id="first_name" value="<%= @student.first_name%>">
    <label for="last_name">Last Name: </label>
    <input type="text" name="last_name" id="last_name" value="<%= @student.last_name%>">
    <label for="email">Email: </label>
    <input type="email" name="email" id="email" value="<%= @student.email%>">
    <select name="dojo_id">
        <option value="<%= @dojo.id %>">-- <%= @dojo.branch %> --</option>
    <% @dojos.each do |dojo| %>
        <option value="<%= dojo.id %>"><%= dojo.branch %></option>
    <% end %>
    </select>
    <input type="submit" value="Update">
</form>
<a href="/">Home</a> | <a href="/dojos/<%= @dojo.id %>/students/<%= @student.id %>"><%= @student.first_name %></a>